<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <application>

        <!-- <message-bundle>message.application</message-bundle> -->
        <locale-config>
            <default-locale>fr_BE</default-locale>
            <supported-locale>nl_BE</supported-locale>
            <supported-locale>fr_BE</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>be.smals.psnextrequest.translation.bundle.ApplicationResources</base-name>
            <var>msg</var>
        </resource-bundle>

    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>toHelp</from-outcome>
            <to-view-id>/html/help/help.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>toHome</from-outcome>
            <to-view-id>/html/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
