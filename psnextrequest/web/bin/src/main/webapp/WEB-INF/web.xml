    <!-- ERROR PAGE -->
    <error-page>
        <exception-type>java.io.FileNotFoundException</exception-type>
        <location>/faces/html/pageNotFound.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/faces/html/errorPage.xhtml</location>
    </error-page>

</web-app>