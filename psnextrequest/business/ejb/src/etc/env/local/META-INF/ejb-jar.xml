<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.0"
>

    <assembly-descriptor>
        <!-- security roles -->
        <security-role>
            <description><![CDATA[Role for Request consultation]]></description>
            <role-name>Request_Consult</role-name>
        </security-role>
        <method-permission>
            <role-name>Request_Consult</role-name>
            <method>
                <ejb-name>PSNextRequestServiceBean</ejb-name>
                <method-name>*</method-name>
            </method>
        </method-permission>
    </assembly-descriptor>
</ejb-jar>